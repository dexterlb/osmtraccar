<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello, I am an android app"
    />
    <Button
            android:text="init osmand api"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonInitApi"
            android:onClick="initOsmAndApi"
    />
    <Button
            android:text="display test point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonDisplayTestPoint"
            android:onClick="displayTestPoint"
    />
    <Button
            android:text="move test point eastward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonMoveTestPoint"
            android:onClick="moveTestPoint"
    />
    <Button
        android:text="refresh points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/buttonRefreshPoints"
        android:onClick="refreshPoints"
    />
</LinearLayout>